<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Jorge.Pineda.verifier.MainActivity">
    <Button
            android:layout_width="197dp"
            android:layout_height="85dp"
            android:id="@+id/enroll"
            android:text="Enroll"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/verify"/>
    <Button
            android:layout_width="197dp"
            android:layout_height="85dp"
            android:id="@+id/verify"
            android:text="Verify"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="Verifier"
            android:layout_width="200dp"
            android:layout_height="82dp"
            android:id="@+id/textView2" android:textSize="60sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/enroll"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.378"
            android:layout_marginTop="-16dp"/>
    <Switch
            android:text="NNAPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nnapi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.477"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/enroll"/>
    <Switch
            android:text="JAVA Processing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/java" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.581" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nnapi"/>
</android.support.constraint.ConstraintLayout>