<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Enrollment_activity">
    <ImageButton
            android:onClick="micOnClickListener"
            android:layout_width="106dp"
            android:layout_height="112dp" app:srcCompat="@android:drawable/ic_btn_speak_now"
            android:id="@+id/mic"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView5"/>
    <TextView
            android:text="Press  the button below and say the words clearly:"
            android:layout_width="283dp"
            android:layout_height="162dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView" android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
            app:fontFamily="sans-serif" android:textSize="30sp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
    />
    <TextView
            android:text="My name is *your name*"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="36sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mic" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>